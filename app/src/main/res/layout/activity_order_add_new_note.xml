<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="12dp"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:hint="@string/text_note_hint"
        android:textColorHint="#A8A2A8"
        android:gravity="top|left"
        android:maxLength="100"
        android:id="@+id/newnotetext"
        android:textColor="#000000" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:paddingBottom="20dp">


        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dialogButtonCANCEL"
            android:text="Avbryt"
            style="@style/ButtonThemeSmall"

            />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dialogButtonDONE"
            android:text="Klar"
            style="@style/ButtonThemeSmall"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textmeat"
        android:text="@string/text_notes_prep"
        android:paddingTop="10dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/buttonsmeat"
        android:layout_height="wrap_content"
        android:gravity="top|right"
        android:paddingBottom="20dp">


        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/raremeatbtn"
            android:text="Blodig"
            style="@style/ButtonThemeSmall"
            />

        <Button
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/mediummeatbtn"
        android:text="Medium"
            style="@style/ButtonThemeSmall"/>

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/welldonemeatbtn"
            android:text="VÃ¤lstekt"
            style="@style/ButtonThemeSmall"/>
    </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_weight="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addednotestext"
        android:text="@string/text_add_note"
        android:textSize="@dimen/medium_textsize"
        android:padding="6dp"
        android:textAlignment="center" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/addednotes"
        />
    </LinearLayout>

</LinearLayout>