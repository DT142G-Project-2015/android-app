<resources>

    <!-- OBS: Use the pre-set colors when assigning color to styles! -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorButtonNormal">@color/button_black</item>
        <item name="android:background">@color/background_grey</item>
        <item name="android:textColor">@color/white</item>

    </style>


    <style name="BackgroundGradient" parent="AppTheme">
        <item name="android:background">@drawable/background_gradient</item>
    </style>

   <!-- Base button style -->
    <style name="ButtonTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorButtonNormal">@color/button_black</item>
        <item name="android:textSize">@dimen/main_buttons_textsize</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Smaller button style -->
    <style name="ButtonThemeSmall" parent="ButtonTheme">
        <item name="android:textSize">@dimen/small_buttons_textsize</item>
    </style>

    <style name="ButtonNote" parent="ButtonThemeSmall">
        <item name="android:drawableEnd">@drawable/note</item>
    </style>

    <style name="ButtonDelete" parent="ButtonThemeSmall">
        <item name="android:drawableEnd">@drawable/delete</item>
    </style>

    <style name="ButtonRefresh" parent="ButtonThemeSmall">
        <item name="android:drawableEnd">@drawable/refresh</item>
        <item name="android:text">@string/text_update_button</item>
        <item name="android:background">@color/refresh_blue</item>
    </style>


    <!-- Stil fÃ¶r listade noteringar i Note-rutan -->
    <style name="NoteBeginText">
        <item name="android:drawableStart">@drawable/note</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!--Kitchen Listview style -->
    <style name="CustomListviewLayout" parent="AppTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/kitchen_textsize</item>
        <item name="android:background">@color/kitchen_white</item>

        <item name="android:paddingLeft">6dip</item>
        <item name="android:paddingRight">6dip</item>
    </style>

</resources>
